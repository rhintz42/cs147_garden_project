	<%= render '/layouts/header' %>

	<div class="user-home-name">
		<p>
  		<b>Welcome Back, <%= @user.name_first.capitalize %>!</b>
		</p>
	</div>
	<div class="ui-block-a">
    <p><a href="#home_two" data-role="button">Next Page</a></p> 
  </div>
  <%= render '/layouts/footer' %>
</div>



</div><!-- End of page one -->

