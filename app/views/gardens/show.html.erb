<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @garden.name %>
</p>

<div data-role="content">
  <div id="iphone_container">
  <% if @plants_in_garden.size > 0 then %>
    <ul data-role="listview" data-divider-theme="b" data-inset="true">
      <li data-role="list-divider" role="heading">
        Your Plants
      </li>
      <% for plant in @plants_in_garden do %>
        <li data-theme="c">
          <a href="/personal_plants/<%= plant[:id] %>" data-transition="slide">
            <%= plant[:name_personalized] %>
          </a>
        </li>
      <% end %>
    </ul>
  <% else %>
    You don't have any Plants in this Garden
  <% end %>


  <a data-role="button" data-theme="e" href="/personal_plants/new?garden_id=<%=@garden[:id] %>">
    Add a New Plant!
  </a>
</div>
</div>
<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
