<%= render "/layouts/header" %>
<h1>Listing gardens</h1>


<div data-role="content">
  <div id="iphone_container">
    <% if @gardens.size > 0 then %>
      <ul data-role="listview" data-divider-theme="b" data-inset="true">
        <li data-role="list-divider" role="heading">
          Your Gardens
        </li>
        <% for garden in @gardens do %>
          
          <li data-theme="c">
            <a href="/gardens/<%= garden[:id] %>" data-transition="slide">
              <%= garden[:name] %>
            </a>
          </li> 

        <% end %>
      </ul>
    <% else %>
      You don't have any Gardens Yet
    <% end %>

  <a data-role="button" data-theme="e" href="/gardens/new">
    Create New Garden
  </a>
  </div>
</div>

<%= render "/layouts/footer" %>
            















<% if false then %>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gardens.each do |garden| %>
  <tr>
    <td><%= garden.name %></td>
    <td><%= link_to 'Show', garden %></td>
    <td><%= link_to 'Edit', edit_garden_path(garden) %></td>
    <td><%= link_to 'Destroy', garden, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Garden', new_garden_path %>
<% end %>
