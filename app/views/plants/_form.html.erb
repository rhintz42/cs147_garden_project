<%= render 'layouts/header' %>

<%= form_for(@plant) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
        <%= f.label :name_common %><br />
        <%= f.text_field :name_common %>
      </div>
      <div class="field">
          <%= f.label :name_botanical %><br />
          <%= f.text_field :name_botanical %>
        </div>
        <div class="field">
          <%= f.label :plant_type %><br />
          <%= f.text_field :plant_type %>
        </div>
      
      <div class="field">
        <%= f.hidden_field :user_created_by, { :value => session[:user][:id] } %>
        <%= f.hidden_field :created_from_garden_id, { :value => params[:garden_id]} %>
      </div>
    
      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>

<%= render 'layouts/footer' %>
