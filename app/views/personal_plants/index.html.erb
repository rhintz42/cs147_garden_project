<h1>Listing personal_plants</h1>

<table>
  <tr>
    <th>Name personalized</th>
    <th>Last watering</th>
    <th>Next watering</th>
    <th>Plant</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personal_plants.each do |personal_plant| %>
  <tr>
    <td><%= personal_plant.name_personalized %></td>
    <td><%= personal_plant.last_watering %></td>
    <td><%= personal_plant.next_watering %></td>
    <td><%= personal_plant.plant %></td>
    <td><%= personal_plant.user %></td>
    <td><%= link_to 'Show', personal_plant %></td>
    <td><%= link_to 'Edit', edit_personal_plant_path(personal_plant) %></td>
    <td><%= link_to 'Destroy', personal_plant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

